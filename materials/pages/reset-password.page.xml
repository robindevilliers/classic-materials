<?schema version="2"?>
<page defnVersion="v1" id="resetPasswordRequest" title="Reset Password Request" group="public">
    <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="STRETCH">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND" alignItems="CENTER" padding="1em">
            <div v="v1" columnWidth="12" columnWidthMedium="4" justifyContent="CENTER">
                <image v="v1" id="title-img" src="logo.svg" width="200px" height="200px"/>
            </div>
            <div v="v1" columnWidth="12" columnWidthMedium="8" orientation="COLUMN" justifyContent="SPACE_AROUND"
                alignItems="CENTER">
                <title size="LARGE" v="v1">
                    <textual>Reset Password</textual>
                </title>
                <text v="v1">
                    <textual>Please enter your new password below.</textual>
                </text>
            </div>
        </div>
        <reset-password-panel/>
    </div>
</page>
