<?schema version="2"?>
<page defnVersion="v1" id="emailConfirmationComplete" title="Email Confirmation Complete" group="public">
    <div v="v1" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="STRETCH">
        <div v="v1" orientation="ROW" justifyContent="SPACE_AROUND" alignItems="CENTER" padding="1em">
            <div v="v1" columnWidth="12" columnWidthMedium="4" justifyContent="CENTER">
                <image v="v1" src="logo.svg" width="200px" height="200px"/>
            </div>
            <div v="v1" columnWidth="12" orientation="COLUMN" justifyContent="SPACE_AROUND" alignItems="CENTER"
                columnWidthMedium="8">
                <title size="LARGE" v="v1">
                    <textual>Registration Complete</textual>
                </title>
                <text v="v1">
                    <textual>
                        Thank you. Your email address has been confirmed. You will now be able
                        to login.
                    </textual>
                </text>
                <text v="v1">
                    <textual>Click on the link to return to the login page.</textual>
                </text>
                <link v="v1" view="index">
                    <text v="v1">
                        <textual>Login Page</textual>
                    </text>
                </link>
            </div>
        </div>
    </div>
</page>
